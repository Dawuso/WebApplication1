@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Pobrane z pliku</h1>
</div>
<div class="card-columns">
    @foreach (var product in Model.Products)
    {
    <div class="card">
        <img class="card-img" src=@product.Img width="100" height="100" alt="product_image" />
        <div class="card-body">
            <h5 class="card-title">@product.Title</h5>
        </div>      
    </div>
    }
</div>